extends includes/_layout

block header
    include components/header-product/_header-product
    - var bgPath = "./img/bg_5.jpg";
    - var headerLinks = [{src: '#objects', title: 'Галерея'}, {src: '#materials', title: 'Инструкция'}, {src: '#delivery', title: 'Доставка'}, {src: '#letters', title: 'Отзывы'}];
    - var showBtn = true;
    +productHeader(bgPath, headerLinks, showBtn)

block content
    main#main-content
        .product
            .container
                .product-inline.for-roll
                    .product-image
                        .product-image-block
                            img(src="./img/product-item-5.png" alt="#")
                    .product-desc
                        ul.breadcrumbs-line.row
                            li: a(href="#") Главная
                            li.separator: a(href="#") >
                            li: a(href="#") Каталог
                            li.separator: a(href="#") >
                            li: a(href="#") Наливные полы
                            li.separator: a(href="#") >
                            li: a(href="#") Teping Пол 205 C
                        h1.product-title
                            i.icon-title
                            | Sport
                        p Бесшовное покрытие для детских и спортивных площадок. #[br]Для травмобезопасных игр и занятий спортом!
                        ul.product-desc__list
                            li
                                i.icon-quote
                                | Травмобезопасное покрытие
                            li
                                i.icon-quote
                                | Высокая стойкость к ударам и износу
                            li
                                i.icon-quote
                                | Экологически чистое покрытие
                        p.product-price
                            small от
                            span &nbsp;655
                                i.icon-rub
                            | за м#[sup 2]
                        .product-desc-btns
                            a(data-src="#modal-order" href="javascript:;" data-fancybox style="max-width: 280px").btn.btn-red Предварительный заказ
                    .product-apply
                        p.apply-title: b Применяется на объектах
                        .apply-inline.row
                            .apply-column.col-md-6.col-xs-12
                                .apply-item
                                    i.icon-playground
                                    p Детские площадки
                                .apply-item
                                    i.icon-sportground
                                    p Спортивные площадки
                                .apply-item
                                    i.icon-golf
                                    p Поля для мини-гольфа
                                .apply-item
                                    i.icon-sidewalk
                                    p Пешеходные дорожки
        include components/modifications/_modifications
        - var mods = [{row: [{src: './img/modifications/sport/1.png', title: 'Teping Sport Classic', description: 'Оптимальное покрытие для спортивных площадок. Отлично выводит воду, легко убирается, возможно заливать каток. Надёжное бюджетное решение.', colors: ['yellow', 'blue', 'green', 'white', 'red'], weight: '10 мм - 20 мм', price: '<b>от</b> 1 040' }, { src: './img/modifications/sport/2.png', title: 'Teping Sport Combi', description: 'Решение для тех, кто хочет очень красиво, но не очень дорого! Основной слой покрытия - амортизационная подложка из черной резиновой крошки, верхний слой - яркие цвета EPDM гранул.', colors: ['yellow', 'blue', 'green', 'white', 'red'], weight: '10 мм - 20 мм', price: '<b>от</b> 1 600' }, { src: './img/modifications/sport/3.png', title: 'Teping Sport EPDM', description: 'Покрытие на основе синтетического каучука (EPDM) - яркое и индивидуальное. Подходит для площадок с высокими эстетическими и экологическими требованиями.', colors: ['yellow', 'blue', 'green', 'white', 'red'], weight: '10 мм - 20 мм', price: '<b>от</b> 2 280' } ] } ];
        - var header = 'Модификации Teping Sport';
        +modifications(mods, 'center', header)
        #objects.objects
            h2.text-center Объекты с Teping Пол 205 C
            include includes/_objects-slider
        #materials.materials.block
            .container
                .materials-inline.row
                    .steps-block
                        h2 Этапы укладки
                        .steps-item
                            p.step-count 1
                            .step-desc
                                p: b Подготовка поверхности
                                p Бетонное основание необходимо отшлифовать с целью удаления цементного молочка, после чего тщательно обеспылить с помощью промышленного пылесоса. Это необходимо для обеспечения надёжной адгезии материала к поверхности.
                        .steps-item
                            p.step-count 2
                            .step-desc
                                p: b Грунтование
                                p Грунтовочная смесь наносится с помощью велюрового валика, а в труднодоступных местах – с помощью кисти.
                        .steps-item
                            p.step-count 4
                            .step-desc
                                p: b Нанесение финишного слоя
                                p Толщина от 1 до 3 мм. Придает декоративный вид полу и нужную фактуру.
                        .steps-btns
                            a(href="./insruction.pdf" target="_blank").btn.btn-red-transparent
                                i.icon-pdf
                                | Скачать инструкцию
                            a(href="https://www.youtube.com/embed/irRKhNBX5qs" data-fancybox).btn.btn-black-transparent
                                i.icon-play
                                | Смотреть видео инструкцию
                        .step-change
                            p: b Какую толщину выбрать?
                            .change-thicknees-item
                                i.icon-gym
                                p.count 4 – 8
                                    small мм
                                p Спортивные залы
                            .change-thicknees-item
                                i.icon-gym
                                p.count 8 – 16
                                    small мм
                                p Детские игровые зоны
                            .change-thicknees-item
                                i.icon-gym
                                p.count 10 – 14
                                    small мм
                                p Зоны для хождения на коньках #[br]на ледовых катках
                        p: b Справлюсь ли я?
                        p Мы сделали всё для удобства работы. Материал специально поставляется в комплектах. В большое ведро выливаем содержимое малого. Ошибиться с пропорциями сложно.
                        p В ведре мы оставили место для добавления кварцевого песка. Дополнительная тара не понадобится.&nbsp;
                            a(href='#') Поэтапная инструкция&nbsp;
                            | поможет.
                    .material-block
                        h2 Вам понадобится
                        p: b Материалы
                        .material-item
                            i.icon-banks
